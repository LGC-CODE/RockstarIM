	<script type="text/ng-template" id="/login.html">
		<div class="col-sm-offset-4 col-md-offset-4 col-xs-12 col-sm-4 col-md-4">
		<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">RockstarIM</h3>
						</div>
						<div id="lightbox-host" class="panel-body">
							<div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">
								<button type="button" class="close" 
									data-dismiss="alert" 
										aria-label="Close">
											<span aria-hidden="true">&times;</span>
								</button>
								<strong>{{ error.message }}</strong>
							</div>
						    <form ng-submit="logIn()">
							    <div class="form-group">
							      <input type="text"
							      	class="form-control"
							      		placeholder="Username"
							      			ng-model="user.username">
							    </div>
							    <div class="form-group">
							      <input type="password"
							      	class="form-control"
							      		placeholder="Password"
							      			ng-model="user.password">
							    				</div>
								<button type="submit" 
									class="btn btn-default">Log In</button>
							</form>
						</div>
						<div class="panel-footer">Login</div>
					</div>
		</div>

	 </script>
	<script type="text/ng-template" id="/register.html">
	<div class="container">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Register</h3>
				</div>
				<div class="panel-body">
					<div ng-show="error" class="alert alert-danger alert-dismissible" role="alert">
						<button type="button" class="close" 
							data-dismiss="alert" 
								aria-label="Close">
									<span aria-hidden="true">&times;</span>
						</button>
						<strong>{{ error.message }}</strong>
					</div>
					<form ng-submit="register()">
		
						<div class="form-group">
					  	    <input type="text" class="form-control" 
					  	    	placeholder="Username" 
					  	    		ng-model="user.username">
						</div>
						
						<div class="form-group">
						    <input type="password" class="form-control" 
						    	placeholder="Password" 	
						    		ng-model="user.password">
						</div>
						
						<div class="form-group">
						    <input type="text" class="form-control" 
						    	placeholder="Name to display" 
						    		ng-model="user.name">
						</div>	
						<div class="form-group">
						    <input type="text" class="form-control" 
						    	placeholder="Age" 
						    		ng-model="user.age">
						</div>	
		
						<div class="form-group">
						    <input type="text" class="form-control" 
						    	placeholder="Picture URL" 
						    		ng-model="user.url"></input>
						</div>	
							
						<button type="submit" 	
							class="btn btn-default">Submit</button>
				    </form>
				</div>
				<div class="panel-footer">RockstarIM</div>
			</div>
	</div>
	</script>
	<script type='text/ng-template' id="/RockstarIM.html">
		<div class="container">
				<!--------------- lightbox for host and guest --------------->
				<div class="modal fade" id="lightbox-host" tabindex="-1" role="dialog" aria-labelledby="host">
					<div class="modal-dialog modal-sm" role="document">
						<div class="modal-content">
							<div class="thumbnail">
								<img src="{{ currentUser().picture }}" />
							</div>
						</div>
					</div>
				</div>
				<div class="modal fade" id="lightbox-guest" tabindex="-1" role="dialog" aria-labelledby="guest">
					<div class="modal-dialog modal-sm" role="document">
						<div class="modal-content">
							<div class="thumbnail">
								<img src="{{ user.pictureUrl }}" />
							</div>
						</div>
					</div>
				</div>
				 <!-----------------end lightbox------------------->
				<div class="col-sm-4 col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">User</h3>
						</div>
						<div class="panel-body">
							<a href="{{ currentUser().picture }}" data-toggle="modal" data-target="#lightbox-host" class="thumbnail">
								<img src="{{ currentUser().picture }}" />
							</a>
							<p>{{ currentUser().display }}</p>
					    	<p>{{ currentUser().age }}</p>
						</div>
						<div class="panel-footer">Host</div>
					</div>
				</div>
				
				<div class="col-sm-4 col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Messages</h3>
						</div>
						<div class="panel-body panel-body-scroll">
							<div class="chatAdjust" ng-repeat="messages in message">
					  		<p>
					  			From: {{messages.fromUser}}
					  		</p>
					  		<p style="margin-left:10px;">
						  		{{ messages.text }}
						  	</p>
					  	</div>
						</div>
						<div class="panel-footer">
							<form ng-submit="addMessage()"	style="margin-top:31px;">
						  		<div class="form-group">
							    	<input class="form-control" type="text" placeholder="Message" ng-model="text"></input>			
							    </div>								    
								<button class="btn btn-default" type="submit">Post</button>						   
							</form>
						</div>
					</div>
				</div>
				
				<div class="col-sm-4 col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">User</h3>
						</div>
						<div class="panel-body">
							<a href="{{ user.pictureUrl }}" data-toggle="modal" data-target="#lightbox-guest" class="thumbnail">
								<img src="{{ user.pictureUrl }}" />
							</a>
							<p>{{ user.displayName }}</p>
					    	<p>{{ user.age }}</p>
						</div>
						<div class="panel-footer">Guest</div>
					</div>
				</div>
		</div>
    </script>
    <script type="text/ng-template" id="/users.html">
    	<div class="container">
    		<div ng-repeat="user in userReg" class="col-sm-4 col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">User</h3>
					</div>
					<div class="panel-body">
						<a href="{{ user.pictureUrl }}" class="thumbnail thumbnail-cropped">
							<img src="{{ user.pictureUrl }}" />
						</a>
						<p>{{ user.displayName }}</p>
		    			<p>{{ user.age }}</p>
		    			<p>{{ user.email }}</p>
					</div>
					<div class="panel-footer">
						<div ng-show="isLoggedIn()">
			    			<a href="#/RockstarIM/{{ user._id }}"><button class="btn btn-default">Chat!</button></a>
			    		</div>
			    		<div ng-hide="isLoggedIn">Log in to begin chatting!</div>
					</div>
				</div>
			</div>
    	</div>
